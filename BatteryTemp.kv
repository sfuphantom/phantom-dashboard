<BatteryTemp>:
    anchor_x: 'left'
    anchor_y: 'top'
    FloatLayout:
        SpeedMeter:
            size_hint: (0.5, 0.5)
            pos_hint: {'x':0.01, 'y':0.68}
            id: temperature
            min: 15
            max: 80
            tick: 5
            start_angle: 90
            end_angle: 270
            #needle_image: 'needle3.png'
            #label_icon: 'temp.png'
            label_icon_scale: 0.35
            label_radius_ratio: 0.35
            cadran_color: '#000000'
            sectors: [15, '##00FF00', 35, '#ffff00', 60, '#ff0000', 80]
            #on_touch_move: app.set_temp(*args)
            value: app.temperature
        Label: 
            font_size: '23sp'
            size: self.texture_size
            pos_hint: {'x': -0.24, 'y': 0.47}
            text: 'BATTERY TEMPERATURE'
        Label: 
