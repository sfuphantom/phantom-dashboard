#: kivy 1.11.1
#:import hex kivy.utils.get_color_from_hex

<BatteryTemp>:
    anchor_x: 'left'
    anchor_y: 'top'
    padding: [10, 0]
    BoxLayout: 
        orientation: 'vertical'
        size_hint: (None, None)
        canvas.before:                
            Line:
                width: 2.0 
                rectangle: self.x, self.y, 250, 75
        Button:
            background_color: (1, 0, 0, 1)
            on_release:
                root.animate_the_button(self)
        Button:
            background_color: (1, 0, 0, 1)
            on_release:
                root.animate_the_button(self)
        Button:
            background_color: hex('#fcf403')
            on_release:
                root.animate_the_button(self)
        Button:
            background_color: hex('#fcf403')
            on_release:
                root.animate_the_button(self)
        Button:
            background_color: (0, 1, 0, 1)
            on_release:
                root.animate_the_button(self)
        Button:
            background_color: (0, 1, 0, 1)
            on_release:
                root.animate_the_button(self)
