<BatteryTemp>:
    anchor_x: 'left'
    anchor_y: 'top'
    FloatLayout:
        SpeedMeter:
            size_hint: (0.3, 0.5)
            pos_hint: {'x':0.0, 'y':0.7}
            id: temperature
            min: 15
            max: 70
            tick: 5
            start_angle: 90
            end_angle: 270
            #needle_image: 'needle3.png'
            #label_icon: 'temp.png'
            label_icon_scale: 0.35
            label_radius_ratio: 0.35
            cadran_color: '#000000'
            sectors: [15, '##00FF00', 35, '#ffff00', 60, '#ff0000', 70]
            #on_touch_move: app.set_temp(*args)
            value: app.temperature
            label: 'Â°C'
        Label: 
            size: self.texture_size
            pos_hint: {'x': -0.43, 'y': 0.47}
            text: 'BATT. TEMP.'
