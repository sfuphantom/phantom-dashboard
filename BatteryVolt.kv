#: kivy 1.11.1

<BatteryVolt>:
    anchor_x: 'right'
    anchor_y: 'top'
    FloatLayout:
        SpeedMeter:
            size_hint: (0.5, 0.5)
            pos_hint: {'x':0.5, 'y':0.68}
            id: temperature
            min: 132
            max: 168
            tick: 4
            start_angle: 90
            end_angle: 270
            #needle_image: 'needle3.png'
            #label_icon: 'temp.png'
            label_icon_scale: 0.35
            label_radius_ratio: 0.35
            cadran_color: '#000000'
            sectors: [132, '##00FF00', 144, '#ffff00', 156, '#ff0000', 168]
            #on_touch_move: app.set_temp(*args)
            value: app.voltage
        Label: 
            font_size: '23sp'
            size: self.texture_size
            pos_hint: {'x': 0.25, 'y': 0.47}
            text: 'BATTERY VOLTAGE'
        Label: 
            font_size: '23sp'
            size: self.texture_size
            pos_hint: {'x': 0.25, 'y': 0.32}
            text: 'V'
            color: 0, 0, 0, 1