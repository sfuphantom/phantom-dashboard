#: kivy 1.11.1

<Regen>:
    anchor_x: 'center'
    anchor_y: 'center'
    BoxLayout:
        size_hint: (None, None)
        offset: 100
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 2.0
                ellipse: (self.x - self.offset/2, self.y, self.width + self.offset, self.height, -90, 90)
            Line:
                width: 2.0
                ellipse: (self.x - self.width/2 - self.offset, self.y - 1.5*self.offset/2, self.width + 3*self.offset, self.height + 1.5*self.offset, -90, 90)