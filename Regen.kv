#: kivy 1.11.1
#:import Factory kivy.factory.Factory

<Regen>:
    anchor_x: 'center'
    anchor_y: 'center'
    FloatLayout:
        SpeedMeter:
            size_hint: (0.4, 0.5)
            pos_hint: {'x':0.50, 'y':0.25}
            id: fuel
            start_angle: 150
            end_angle: 20
            min: -4
            max: 10
            value: app.regenValue
            tick: 2
            label_radius_ratio: 0.4
            #label_icon: 'fuel.png'
            sectors: (0, app.regenColor, app.regenValue)            
            needle_color: '#ffff00'