#: kivy 1.11.1

<Faults>:
    anchor_x: 'center'
    anchor_y: 'bottom'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.600, 0.400)
        Label:
            text: 'FAULTS'
        GridLayout:
            cols: 3
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 1, 0, 0, .8
                    Line:
                        width: 30.
                        circle:
                            (self.center_x, self.center_y, 1)
                Label:
                    font_size: '20sp'
                    text: 'IMD'
                    color: 1, 1, 1, 1
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 0, 0, 0, 0
                    Line:
                        width: 30.
                        circle:
                            (self.center_x, self.center_y, 1)
                Label:
                    font_size: '20sp'
                    text: 'BMS'
                    color: 0, 1, 0, .5
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 0, 0, 0, .5
                    Line:
                        width: 30.
                        circle:
                            (self.center_x, self.center_y, 1)
                Label:
                    font_size: '20sp'
                    text: 'FLT'
                    color: 0, 1, 0, .5
            # this next piece ensures buffer space underneath
            Label:
                text: 'FLT'    