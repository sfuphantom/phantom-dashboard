#: kivy 1.11.1

<Faults>:
    anchor_x: 'center'
    anchor_y: 'bottom'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.600, 0.400)
        Label:
            text: 'FAULTS'
        GridLayout:
            cols: 3
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'IMD Fault Button'
                    background_color: 0, .5, 0, 153
                Label:
                    background_color: 1, 0, 0, 1
                    font_size: '20sp'
                    text: 'IMD'
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: 0, .5, 0, 1
                    Line:
                        width: 30.
                        circle:
                            (self.center_x, self.center_y, 1)
                Label:
                    background_color: 1, 1, 1, 1
                    font_size: '20sp'
                    text: 'BMS'
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: 'Other Faults Button'
                    background_color: 1, 0, 0, 1
                Label:
                    background_color: 1, 0, 0, 1
                    font_size: '20sp'
                    text: 'FLT'
            # this next piece ensures buffer space underneath
            Label:
                text: 'FLT'    