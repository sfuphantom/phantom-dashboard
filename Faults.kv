#: kivy 1.11.1

<Faults>:
    anchor_x: 'center'
    anchor_y: 'bottom'
    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.600, 0.400)
        Label:
            text: 'FAULTS'
        GridLayout:
            cols: 3
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: app.imdcolor
                    Line:
                        width: 30.
                        circle:
                            (self.center_x, self.center_y, 1)
                Label:
                    font_size: '20sp'
                    text: 'IMD'
                    color: app.imdtext 
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: app.bmscolor
                    Line:
                        width: 30.
                        circle:
                            (self.center_x, self.center_y, 1)
                Label:
                    font_size: '20sp'
                    text: 'BMS'
                    color: app.bmstext
            BoxLayout:
                orientation: 'vertical'
                canvas:
                    Color:
                        rgba: app.othercolor
                    Line:
                        width: 30.
                        circle:
                            (self.center_x, self.center_y, 1)
                Label:
                    font_size: '20sp'
                    text: 'FLT'
                    color: app.othertext 
            # this next piece ensures buffer space underneath
            Label:
                text: 'FLT'    